{
  "name": "lamp-os-ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:server": "node dev-server.js",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:copyindex": "copyfiles -f -E \"./dist/index.html.gz\" \"../lamp-os/data\"",
    "build:build-image": "cd ../lamp-os && python -m platformio run --target buildfs --environment upesy_wroom",
    "build:upload-image": "cd ../lamp-os && python -m platformio run --target uploadfs --environment upesy_wroom",
    "build:upload": "run-s build build:copyindex build:build-image build:upload-image",
    "flash": "run-s build build:copyindex flash:firmware flash:fs",
    "flash:firmware": "cd ../lamp-os && pio run -e upesy_wroom -t upload",
    "flash:fs": "cd ../lamp-os && pio run -e upesy_wroom -t uploadfs",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build tsconfig.app.json",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "build:analyze": "vite build --mode analyze"
  },
  "dependencies": {
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "express": "^4.18.2",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "terser": "^5.43.1",
    "typescript": "~5.8.0",
    "vite": "^4.5.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-vue-devtools": "^1.0.0-rc.1",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.4",
    "ws": "^8.14.2"
  }
}